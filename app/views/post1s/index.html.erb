<p id="notice"><%= notice %></p>

<h4>Posts</h4>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post1s.each do |post1| %>
      <tr>
        <td><%= post1.title %></td>
        <td><%= post1.content %></td>
        <td><%= post1.category_id %></td>
        <td><%= post1.user_id %></td>
        <td><%= link_to 'Show', post1 , class: "btn btn-success" %></td>
        <% if logged_in? %>        
          <td><%= link_to 'Edit', edit_post1_path(post1), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', post1, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= will_paginate %>
</div>  
<br>
<% if logged_in? %>        
  <%= link_to 'New Post1', new_post1_path, class: "btn btn-success" %>
<% end %>